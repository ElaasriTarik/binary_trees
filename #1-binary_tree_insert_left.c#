#include "binary_trees.h"

binary_tree_t *binary_tree_insert_left(binary_tree_t *parent, int value)
{
  binary_tree_t *node = malloc(sizeof(binary_tree_t));
  if (node == NULL)
    return (NULL);

  node->parent = parent;
  node->left = NULL;
  node->right = NULL;
  node->n = value;

  if (parent->left != NULL)
    {
      parent->left = node;
      old->parent = node;
      node->left = old;
    }
  else
    {
      parent->left = node;
    }

  return (node);
}
